<header class='header'>
	<div class=''>
		{{> logo}}
	</div>

	<nav class='header_nav header_nav_right'>
		<div class='header_nav_right'>
			{{> nav list=header}}
		</div>
	</nav>
</header>

<main class="main">
	{{#with info}}
	<div class="info">
		<h1 class="info_title">{{title}}</h1>
		<p class="info_text">{{description}}</p>
	</div>
	{{/with}}
	{{#with form}}
		<form class="form">
			<div class="form_input_list">
				{{#each inputs}}
					<input type="{{type}}" placeholder="{{placeholder}}" name="{{name}}" id="form-input-{{id}}" class="form_input">
				{{/each}}
			</div>
			<div class="form_checkbox">
				<input type="checkbox" id="{{checkbox.name}}">
				<div></div>
				<label for="{{checkbox.name}}">{{checkbox.label}}</label>
			</div>
			<button type="submit" class="form_button">{{button}}</button>
			<div class="form_hr"></div>
			<p class="form_info">{{info}}</p>
		</form>
	{{/with}}
</main>

{{#with updates}}
	<div class="updates">
		<h2 class="updates_title">{{title}}</h2>
		<div class="updates_list">
			{{#each list}}
				<div class="list">
					<img src="https://picsum.photos/32/32" alt="Logo" class="list_logo">
					<div class="list_text">
						<div class="list_nickname">@{{nickname}}</div>
						<div class="list_description">{{description}}</div>
					</div>
				</div>
			{{/each}}
		</div>
		<a href="{{show_all.url}}" class="updates_link">{{show_all.text}}</a>
	</div>
{{/with}}

{{#with expirience}}
	<div class="expirience">
		<h2 class="expirience_title">{{title}}</h2>
		<p class="expirience_badge">{{badge}}</p>
		<div class="expirience_list">
			{{#each list}}
				<div>
					<div class="expirience_list_name">{{name}}</div>
					<div class="expirience_list_details">{{details}}</div>
				</div>
			{{/each}}
		</div>
	</div>
{{/with}}

<footer class='footer'>
	<div class=''>
		{{> logo}}
		<span class='footer_copyright'>Copyright 2023-2024</span>
	</div>
	{{#each footer}}
		<div class=''>
			<span class='footer_title'>{{title}}</span>
			{{> nav list=links isVertical=true}}
		</div>
	{{/each}}
</footer>